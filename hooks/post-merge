#!/bin/bash

# Git Hook - Post-merge
# Ce script se déclenche après un merge (pull)
# Utile pour les déploiements locaux

echo "=== Git Hook Post-Merge: Début ==="

# Vérifier si ce n'est pas juste un fast-forward
if [ "$1" = "1" ]; then
    echo "Fast-forward détecté, mise à jour de la version..."
    
    # Exécuter le script de déploiement
    if [ -f "deploy_version.php" ]; then
        php deploy_version.php
        echo "✅ Version mise à jour après merge"
    else
        echo "❌ Script deploy_version.php non trouvé"
    fi
fi

echo "=== Git Hook Post-Merge: Terminé ==="
